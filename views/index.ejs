<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="/css/nodejs.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/sidebar.css"> <!-- Sidebar CSS -->
</head>
<body>

  <header style="width: 100%; position: fixed; top: 0; left: 0; background-color: #f8f9fa; z-index: 1000; padding: 10px;">
    <button class="openbtn" onclick="toggleSidebar()" style="display: inline-block; background-color: #007bff; color: white; border: none; padding: 10px 20px; cursor: pointer;">
      â˜° 
    </button> 
  </header>

  <!-- Sidebar -->
  <div id="sidebar" class="sidebar" style="top: 60px;"> <!-- Adjusted to avoid overlap -->
    <a href="/">Home</a>
    <a href="/dashboard">Dashboard</a>
    <a href="/event">Create Event</a>
    <form action="/logout?_method=DELETE" method="POST" style="display: inline;">
      <button type="submit" class="sidebar-logout">Logout</button>
    </form>
  </div>

  <!-- Main content -->
  <div id="main" class="container" style="margin-top: 60px;"> <!-- Adjusted for top bar spacing -->
    <h1>Welcome <%= user ? user.first_name : 'to project Black Lion' %>!</h1>

    <% if (user) { %>
      <h2>Your Events</h2>
      <% if (events.length > 0) { %>
        <ul>
          <% events.forEach(event => { %>
            <li>
              <strong><%= event.name %></strong> - <%= event.event_date.toDateString() %> 
              (<%= event.start_time %> - <%= event.end_time %>)
              <br>
              <em>Guests:</em> <%= event.guest_count %>
              <p><%= event.details %></p>

              <!-- Edit and Delete Buttons -->
              <a href="/event/<%= event.id %>/edit">Edit</a>
              <form action="/event/<%= event.id %>?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this event?')">Delete</button>
              </form>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>You haven&#39t created any events yet. <a href="/event">Create one now!</a></p>
      <% } %>
    <% } else { %>
      <a href="/login">Login</a> | <a href="/register">Register</a>
    <% } %>
  </div>

  <script>
    // JavaScript to toggle the sidebar
    function toggleSidebar() {
      var sidebar = document.getElementById("sidebar");
      var main = document.getElementById("main");

      if (sidebar.style.width === "250px") {
        sidebar.style.width = "0";
        main.style.marginLeft = "0";
      } else {
        sidebar.style.width = "250px";
        main.style.marginLeft = "250px";
      }
    }
  </script>
  
</body>
</html>
