<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <link rel="stylesheet" href="/css/nodejs.css">
  <link rel="stylesheet" href="/css/sidebar.css">
</head>
<body>

  <header style="width: 100%; position: fixed; top: 0; left: 0; background-color: #f8f9fa; z-index: 1000; padding: 10px;">
    <button class="openbtn" onclick="toggleSidebar()" style="display: inline-block; background-color: #007bff; color: white; border: none; padding: 10px 20px; cursor: pointer;">
      â˜° 
    </button>
  </header>

  <!-- Sidebar -->
  <div id="sidebar" class="sidebar" style="top: 60px;"> <!-- Adjusted to avoid overlap -->
    <a href="/">Home</a>
    <a href="/dashboard">Dashboard</a>
    <a href="/event">Create Event</a>
    <form action="/logout?_method=DELETE" method="POST" style="display: inline;">
      <button type="submit" class="sidebar-logout">Logout</button>
    </form>
  </div>
  
  <div class="container">
    <h1>Login</h1>

    <% if (message) { %>
      <p style="color: red;"><%= message %></p>
    <% } %>

    <form action="/login" method="POST">
      <input type="text" name="username" placeholder="Username" required />
      <input type="password" name="password" placeholder="Password" required />
      <button type="submit">Login</button>
    </form>

    <a href="/register">Register</a>
  </div>
</body>

<script>
  // JavaScript to toggle the sidebar
  function toggleSidebar() {
    var sidebar = document.getElementById("sidebar");
    var main = document.getElementById("main");

    if (sidebar.style.width === "250px") {
      sidebar.style.width = "0";
      main.style.marginLeft = "0";
    } else {
      sidebar.style.width = "250px";
      main.style.marginLeft = "250px";
    }
  }
</script>

</html>
